{
  "name": "rtsp-monitor-electron",
  "version": "1.0.0",
  "description": "RTSP Monitor Desktop Application",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "test-server": "node rtsp-server.mjs",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "clean": "rimraf dist build",
    "rebuild": "npm run clean && npm run build"
  },
  "keywords": [
    "rtsp",
    "surveillance",
    "electron"
  ],
  "author": "RTSP Monitor Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^24.0.0",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "hls.js": "^1.4.10"
  },
  "build": {
    "appId": "com.rtspmonitor.app",
    "productName": "RTSP Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!backup_*",
      "!test-*.sh",
      "!*.backup"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    }
  }
}
